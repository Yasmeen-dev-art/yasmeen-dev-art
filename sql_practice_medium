--1.Display the {title}$ of every post along with the {username}$ of its author.
select a.username, p.title
from authors a 
join posts p
on a.author_id=p.author_id;


--2. Count the total number of posts written by each author, showing the {author_id} and the {count}
select author_id, count(post_id) as post_count
from posts
group by author_id
order by author_id asc;

--3. Find the names {first_name}, {last_name} as full_name of all authors who have written more than one post.
select a.first_name, a.last_name 
from authors a
join posts p
on a.author_id=p.author_id
group by a.author_id,a. first_name, a.last_name
having count(post_id)> 1;

--4. Determine which post {title} has the most comments, and display the count.
select p.title, count(c.comment_id) as comment_count
from posts p
join comments c
on p.post_id=c.post_id
group by title
order by comment_count  desc
limit 1;

--5. Show the post {title} and all associated {tag_name}.
select p.title , t.tag_name
from posts p
join post_tags pt 
on p.post_id=pt.post_id
join tags t
on t.tag_id=pt.tag_id;
